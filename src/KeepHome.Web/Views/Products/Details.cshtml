@model KeepHome.Web.ViewModels.Products.ProductDetailsViewModel

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.ImageUrl" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-6">
                <h2 class="text-black">@Model.Name</h2>
                <p>@Model.Description</p>
                @if (Model.Quantity < 1)
                {
                    <p class="mb-4 text-danger">@Model.ShowOutOfStockMessage</p>
                }
                else
                {
                    <p class="mb-4">@Model.ShowInStockMessage</p>
                }
                <p><strong class="text-primary h4">@Model.Price лв.</strong></p>
                @if (Model.Quantity > 0)
                {
                    <p><a asp-controller="ShoppingBag" asp-action="Add" asp-route-id="@Model.Id" class="buy-now btn btn-sm btn-primary">Добави в количката</a></p>
                }
            </div>
        </div>
    </div>
</div>