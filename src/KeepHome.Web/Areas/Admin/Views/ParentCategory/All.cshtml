@using KeepHome.Web.Areas.Admin.ViewModels.ParentCategory

@model ICollection<KeepHome.Web.Areas.Admin.ViewModels.ParentCategory.ParentCategoryViewModel>

@{
    ViewData["Title"] = "Основни категории";
}

<div class="container mobile-fondsize-11">
    <div class="mobile-fondsize-20 h3 text-muted">@ViewData["Title"]</div>
    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th scope="col" class="col-lg-1 d-flex justify-content-center">Номер</th>
                <th scope="col" class="col-lg-1 d-flex justify-content-center">ID</th>
                <th scope="col" class="col-lg-3 d-flex justify-content-center">Име</th>
                <th scope="col" class="col-lg-3 d-flex justify-content-center">Брой под категории</th>
                <th scope="col" class="col-lg-3 d-flex justify-content-center"><p><a asp-controller="ParentCategory" asp-action="Add" class="btn btn-success">Създай новa</a></p></th>
            </tr>
        </thead>
        <tbody>
            @{int count = 0; }
            @foreach (var category in Model)
            {
                count++;
                <tr class="row">
                    <td class="col-1 d-flex justify-content-center">
                        @count
                    </td>
                    <td class="col-2 d-flex justify-content-center">
                        @category.Id
                    </td>
                    <td class="col-3 d-flex justify-content-center">
                        @category.Name
                    </td>
                    <td class="col-3 d-flex justify-content-center">
                        @category.ChildCategoriesCount
                    </td>
                    <td class="col-md-3 d-flex justify-content-around">
                        <div class="mr-2">
                            <a asp-controller="ParentCategory" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary btn-sm">Промени</a>
                        </div>
                        <div class="mr-2">
                            <a asp-controller="ParentCategory" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger btn-sm">Изтрий</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>