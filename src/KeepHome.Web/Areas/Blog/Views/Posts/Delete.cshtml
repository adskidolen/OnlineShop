@model KeepHome.Web.Areas.Blog.ViewModels.BlogPost.Output.BlogPostDeleteViewModel

@{
    ViewData["Title"] = "Изтриване на публикация";
}

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="h3 mb-3 text-black text-center">@this.ViewData["Title"]</h2>
            </div>
            <div class="col-md-12">
                <form asp-area="Blog" asp-controller="Posts" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="p-3 p-lg-5 border">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Title" class="text-black"></label>
                                <input asp-for="Title" class="form-control" disabled="disabled">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="Content" class="text-black"></label>
                                <textarea asp-for="Content" cols="30" rows="7" class="form-control" disabled="disabled"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label asp-for="ProductId" class="control-label"></label>
                                <select asp-for="ProductId" class="form-control" asp-items="@Model.Products" disabled></select>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Изтрий">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>